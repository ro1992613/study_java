                    <div class="widget am-cf"  style="min-height: 880px;">
                        <div class="widget-head am-cf">
                            <div class="widget-title am-fl">{{vue_list_name}}</div>
                            <div class="widget-function am-fr">
                                <a href="javascript:;" class="am-icon-cog"></a>
                            </div>
                        </div>
                        <div class="widget-head am-cf">
                            <div class="am-g">
                                <div class="am-u-lg-8">
                                    <div class="am-input-group" style="width: 100%">
                                        <input id="add_task_name" type="text" class="am-form-field" placeholder="添加任务..." v-on:keyup.enter="add_task">
                                    </div>
                                </div>
                                <div class="am-u-lg-4">
                                    <div class="am-input-group am-datepicker-date"
                                         data-am-datepicker="{format: 'yyyy-mm-dd'}">
                                        <input  id="add_task_date" type="text" class="am-form-field" placeholder="日历组件" readonly>
                                        <span class="am-input-group-btn am-datepicker-add-on tpl-table-black-operation">
                                        <a href="#" class="am-icon-calendar  am-icon-md"></a>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="widget-head am-cf">
                            <div class="widget-title am-fl">
                                <div class="tpl-table-black-operation am-fr">
                                    <a href="javascript:;" onclick="change_task_state(undefined)">
                                        <i class="am-icon-folder"></i> 全部
                                    </a>
                                    <a href="javascript:;" onclick="change_task_state(1)">
                                        <i class="am-icon-folder"></i> 已完成
                                    </a>
                                    <a href="javascript:;" onclick="change_task_state(0)">
                                        <i class="am-icon-folder"></i>未完成
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="widget-body  widget-body-lg am-fr">

                            <div class="am-scrollable-horizontal ">
                                <table width="100%" class="am-table am-table-compact tpl-table-black ">
                                    <tbody>
                                    <tr class="gradeX"  v-for="vue_task in vue_task_list">
                                        <td v-on:click="show_content(vue_task.task_id)">
                                            <span class="am-fl">{{vue_task.task_name}}</span>
                                            <span class="am-fr">{{vue_task.task_createtime}}</span>
                                        </td>
                                        <td v-if="vue_task.task_state==1" style="width: 40px;"><span class="am-badge am-badge-danger am-radius">已完成</span></td>
                                        <td v-else style="width: 40px;"><span class="am-badge am-badge-secondary am-radius">未完成</span></td>
                                        <td style="width: 235px;">
                                            <div class="tpl-table-black-operation am-fr">
                                                <a href="javascript:;"  v-on:click="show_content(vue_task.task_id)">
                                                    <i class="am-icon-camera"></i> 查看
                                                </a>
                                                <a href="javascript:;"  v-on:click="change_task_state(vue_task.task_id)">
                                                    <i class="am-icon-toggle-on"></i> 切换
                                                </a>
                                                <a href="javascript:;"  v-on:click="show_update_content(vue_task.task_id)">
                                                    <i class="am-icon-pencil"></i> 编辑
                                                </a>
                                                <a href="javascript:;" class="tpl-table-black-operation-del" v-on:click="delete_task(vue_task.task_id)">
                                                    <i class="am-icon-trash"></i> 删除
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- more data -->
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <div class="am-u-lg-12 am-cf">

                            <div class="am-fl">
                                <ul class="tpl-table-black-operation am-pagination tpl-pagination">
                                    <li><a href="javascript:;" v-on:click="show_tasks_first">«</a></li>
                                    <li><a href="javascript:;" v-on:click="show_tasks_last">上一页</a></li>
                                    <li>当前是第{{page_index}}页，共{{page_count}}页</li>
                                    <li><input type="text" style="width: 50px;" id="input_page_no" class="am-form-field" v-on:keyup.enter="show_tasks_skip"></li>
                                    <li><a href="javascript:;" v-on:click="show_tasks_skip">跳转</a></li>
                                    <li><a href="javascript:;" v-on:click="show_tasks_next">下一页</a></li>
                                    <li><a href="javascript:;" v-on:click="show_tasks_final">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="am-u-sm-12 am-u-md-12 am-u-lg-6">

                    <div class="widget am-cf" style="min-height: 880px;">
                        <div class="widget-head am-cf">
                            <div class="widget-title am-fl">{{task.task_name}}</div>
                            <div class="widget-function am-fr">
                                <a href="javascript:;" class="am-icon-cog"></a>
                            </div>
                        </div>
                        <div class="widget-body  widget-body-lg am-fr">
                            <div class="am-scrollable-horizontal" style="height: 100%;">
                                <div class="am-form-group">
                                    <textarea style="height: 100%;width: 100%;border: 0px;height: 700px" class="tpl-header-search-box" v-model="task.content">{{task.content}}</textarea>
                                    <input type="hidden" value="task.task_id">
                                </div>
                                <div class="tpl-table-black-operation am-fl">
                                    <a href="javascript:;" onclick="update_content()">
                                        <i class="am-icon-folder"></i> 修改
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="am-modal am-modal-no-btn" tabindex="-1" id="edit_content_modal">
    <div class="am-modal-dialog" style="width: 450px;">
        <div class="am-modal-hd">
            <h4>编辑内容</h4>
            <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
        </div>
        <div class="am-modal-bd">
            <div class="am-form-group">
                <input size="50" type="text" class="" placeholder="标题" id="edit_content_modal_title" readonly>
            </div>
            <div class="am-form-group">
                <input size="50" type="hidden" class="" placeholder="标题" id="edit_content_modal_id">
            </div>
            <div class="am-form-group">
                <textarea class="" rows="10" cols="51" placeholder="描述" id="edit_content_modal_content"></textarea>
            </div>
            <div class="am-form-group">
                <button type="button" style="width: 380px;" class="am-btn am-btn-default" onclick="update_task()">提交</button>
            </div>
        </div>
    </div>
</div>

