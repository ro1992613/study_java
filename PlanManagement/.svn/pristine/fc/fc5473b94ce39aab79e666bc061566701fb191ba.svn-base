<div class="am-modal am-modal-no-btn" tabindex="-1" id="add_role_modal">
    <div class="am-modal-dialog" style="width: 400px;">
        <div class="am-panel am-panel-primary" style="margin-bottom: 0px;">
            <div class="am-panel-hd">
                添加角色
                <a href="javascript: void(0)" class="am-close am-close-spin am-fr" data-am-modal-close>&times;</a>
            </div>
            <div class="am-panel-bd" >
                <div class="am-form-group">
                    <input size="40" type="text" placeholder="输入角色名称...." id="add_role_name">
                </div>
                <div class="am-form-group">
                    <textarea class="" rows="10" cols="41" placeholder="备注" id="add_remark"></textarea>
                </div>
                <div class="am-form-group">
                    <button type="button" style="width: 315px;" class="am-btn am-btn-primary am-btn-sm" onclick="add_role()">提交</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="am-modal am-modal-no-btn" tabindex="-1" id="update_role_modal">
    <div class="am-modal-dialog" style="width: 400px;">
        <div class="am-panel am-panel-primary" style="margin-bottom: 0px;">
            <div class="am-panel-hd">
                修改角色
                <a href="javascript: void(0)" class="am-close am-close-spin am-fr" data-am-modal-close>&times;</a>
            </div>
            <div class="am-panel-bd" >
                <div class="am-form-group">
                    <input size="40" type="hidden" id="update_role_id">
                    <input size="40" type="text" placeholder="输入角色名称...." id="update_role_name">
                </div>
                <div class="am-form-group">
                    <textarea class="" rows="10" cols="41" placeholder="备注" id="update_remark"></textarea>
                </div>
                <div class="am-form-group">
                    <button type="button" style="width: 315px;" class="am-btn am-btn-primary am-btn-sm" onclick="update_role()">提交</button>
                </div>
            </div>
        </div>
    </div>
